{{#if updateArtist}}
<h3>Update {{artist.name}}</h3>
<div>
  <form>
    <div class="form-group">
      <label for="bio">Bio:</label>
      {{textarea value=bio id="bio" placeholder=artist.bio}}
    </div>

    <div class="form-group">
      <label for="image">Image URL:</label>
      {{input value=image id="image" placeholder=product.image}}
    </div>

    <div class="form-group">
      <label for="website">Website URL:</label>
      {{input value=website id="website" placeholder=artist.website}}
    </div>

    <button class="btn-lg btn-info"{{action 'update' artist}}>Save Updates</button>
  </form>
</div>
{{else}}
  <button class="btn waves-effect waves-light" type="submit" {{action 'updateArtist'}}>Update</button>
{{/if}}
